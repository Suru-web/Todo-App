<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:layout_margin="@dimen/dp30"
    style="@style/LIST_COLORING"
    app:cardElevation="@dimen/dp12"
    app:cardCornerRadius="@dimen/dp20"
    android:layout_height="@dimen/dp100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:weightSum="1.05"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dueDateSort"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="@string/sort_by_due_time"
            android:gravity="center"
            style="@style/TEXT_COLOR"
            android:textSize="@dimen/dp14"
            tools:ignore="SpUsage" />


        <View
            android:id="@+id/divider2"
            android:layout_width="@dimen/dp150"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/createTimeSort"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="@string/sort_by_created_date"
            android:gravity="center"
            style="@style/TEXT_COLOR"
            android:textSize="@dimen/dp14"
            tools:ignore="SpUsage" />

    </LinearLayout>

</androidx.cardview.widget.CardView>